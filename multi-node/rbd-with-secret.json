{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "name": "rbd2"
    },
    "spec": {
        "containers": [
            {
                "name": "rbd-rw",
                "image": "kubernetes/pause",
                "volumeMounts": [
                    {
                        "mountPath": "/mnt/demoblock",
                        "name": "rbdpd"
                    }
                ]
            }
        ],
        "volumes": [
            {
                "name": "rbdpd",
                "rbd": {
                    "monitors": [
        						"172.17.4.101:6790",
                                "172.17.4.201:6790",
                                "172.17.4.202:6790"                                
    				 ],
                    "image": "demoblock",
                    "user": "admin",
                    "secretRef": {
						  "name": "ceph-secret"
					 },
                    "fsType": "ext4",
                    "readOnly": false
                }
            }
        ]
    }
}
