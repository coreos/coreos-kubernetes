{
  "apiVersion": "extensions/v1beta1",
  "kind": "DaemonSet",
  "metadata": {
    "name": "prometheus-node-exporter"
  },
  "spec": {
    "template": {
      "metadata": {
        "labels": {
          "app": "node-exporter"
        },
        "name": "prometheus-node-exporter"
      },
      "spec": {
        "containers": [
          {
            "image": "prom/node-exporter",
            "name": "node-exporter",
            "ports": [
              {
                "containerPort": 9100,
                "name": "scrape"
              }
            ]
          }
        ],
        "hostNetwork": false,
        "hostPID": true
      }
    }
  }
}
