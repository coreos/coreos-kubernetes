{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "name": "rbd"
    },
    "spec": {
        "containers": [
            {
                "name": "rbd-rw",
                "image": "kubernetes/pause",
                "volumeMounts": [
                    {
                        "mountPath": "/mnt/demoblock",
                        "name": "rbdpd"
                    }
                ]
            }
        ],
        "volumes": [
            {
                "name": "rbdpd",
                "rbd": {
                    "monitors": [
        						"172.17.4.99:6790"
    				 ],
                    "image": "demoblock",
                    "user": "admin",
                    "keyring": "/etc/ceph/keyring",
                    "fsType": "ext4",
                    "readOnly": false
                }
            }
        ]
    }
}
